<div class="container">
    <div class="row vertical-center">
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-8 col-xs-offset-2 col-sm-offset-3  col-md-offset-3 col-lg-offset-4">
            <form action="/user/login" method="post" class="form-horizontal loginform"> 
                <legend><h1>Login</h1></legend>
                <fieldset>
                    {{#if hasError}}
                    
                        <div class="form-group">
                            <div class="alert alert-danger">
                                    {{messages}}
                            </div>
                        </div>          
                    {{/if}}
                    <div class="form-group">
                        <label for="email" class="control-label">EMAIL</label>
                        <input type="email" name="email" class="form-control" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label">PASSOWRD</label>
                        <input name="password" class="form-control" type="password" placeholder="Password" autocomplete="off">    
                    </div>
                    <hr>
                    <div class="form-group">
                        <button class="btn btn-default loginbutton">LOGIN</button>
                    </div>
                    <div>
                        <input name="_csrf" class="form-control" type="hidden" value="{{ csrfToken }}">      
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>